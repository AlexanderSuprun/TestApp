<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:key="@string/preference_key_push_notifications"
        android:title="@string/title_push_notifications_preference" />
    <CheckBoxPreference
        android:key="@string/preference_key_auto_updates"
        android:title="@string/title_updates_preference" />

    <ListPreference
        android:entries="@array/list_options"
        android:entryValues="@array/list_values"
        android:key="@string/preference_key_language"
        android:title="@string/title_language_preference"
        app:useSimpleSummaryProvider="true"/>

</PreferenceScreen>